  "item": [
    {
      "name": "Step 1: HTTPS & Certificate Test",
      "item": [
        {
          "name": "Test HTTPS Connection",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/posts/",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "posts",
                ""
              ]
            },
            "description": "Tests HTTPS connection. Should return 200 OK.\n\n**Expected:** Response over HTTPS with secure cookies.\n\n**To verify:** Check response headers for Strict-Transport-Security."
          },
          "response": []
